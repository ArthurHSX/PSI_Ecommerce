@model Anuncio

@{
    ViewData["Title"] = "NovoAnuncio";
}

@if (Model.ID > 0)
{
    <h2>Editar Anuncio </h2>
    <h4>Editar o Anúncio @Model.ID</h4>
}
else
{
    <h2>Novo Anuncio</h2>
    <h4>Criar um novo Anuncio</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoAnuncio" method="post">
            <div class="form-group">
                <label class="control-label"> @Model.Usuario.Nome </label>
            </div>
            <div class="form-group hidden">
                <input asp-for="UsuarioId" class="form-control" value="@Model.Usuario.ID" />
            </div>
            <div class="form-group hidden">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" value="@Model.ID" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TituloAnuncio" class="control-label"></label>
                <input asp-for="TituloAnuncio" class="form-control" value="@Model.TituloAnuncio" />
                <span asp-validation-for="TituloAnuncio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" value="@Model.Descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" value="@Model.Valor" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            @if (Model.ID > 0)
            {
                <div class="form-group">
                    <button asp-area="" asp-controller="Anuncio" asp-action="Edit" id="Editar" name="Editar" class="btn btn-lg btn-primary btn-block" type="Submit"> Editar Anuncio</button>
                </div>
            }
            else
            {
                <div class="form-group">
                    <button asp-area="" asp-controller="Anuncio" asp-action="Create" id="Cadastrar" name="Cadastrar" class="btn btn-lg btn-primary btn-block" type="Submit"> Cadastrar Anuncio</button>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="MeusAnuncios">Retornar para Meus Anuncios</a>
</div>
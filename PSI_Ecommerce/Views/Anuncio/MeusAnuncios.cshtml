@model PSI_Ecommerce.Models.Anuncio

@{ 
    ViewBag.Title = "Index";
}
@{ 
    Usuario usuario = ViewBag.Message;
}

<main class="l-main">
    <div class="content-wrapper content-wrapper--with-bg">
        @if (usuario.ListaAnuncio.Count > 0)
        {
            <div class="list-group">
                @foreach (var x in usuario.ListaAnuncio)
                {
                    <a href="#" class="list-group-item">
                        <div class="media col-md-3">
                            <figure class="pull-left">
                                <img class="media-object img-rounded img-responsive" src="http://placehold.it/140x100" alt="placehold.it/140x100">
                            </figure>
                        </div>
                        <div class="col-md-5">
                            <h4 class="list-group-item-heading pb-3"> Titulo do anuncio </h4>
                            <p class="list-group-item-text"> Descrição do anuncio... </p>
                        </div>
                        <div class="col-md-3 pull-left">
                            <div class="container col-md-12">
                                <div class="row">
                                    @*<div class="co-md-12 pull-left"><i class="fa fa-check-square"></i> General Manager</div>*@
                                    <div class="co-md-12 pull-left">
                                        <label for="nrTelefoneFixo"> Telefone Fixo </label>
                                    </div>
                                </div>
                                <div class="row">
                                    @*<div class="co-md-12 pull-left"><i class="fa fa-check-square"></i> General Manager</div>*@
                                    <div class="co-md-12 pull-left">
                                        <label for="nrTelefoneCelular"> Telefone Celular </label>
                                    </div>
                                </div>
                                <div class="row">
                                    @*<div class="co-md-12 pull-left"><i class="fa fa-check-square"></i> General Manager</div>*@
                                    <div class="co-md-12 pull-left">
                                        <label for="nmContato"> Nome contato </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-1 text-center">
                            <p> 2 <small> Criar um botão excluir anuncio </small></p>
                            @*<button type="button" class="btn btn-primary btn-sm btn-block">Open</button>*@
                        </div>
                    </a>
                }

            </div>
        }        

    </div>
</main>
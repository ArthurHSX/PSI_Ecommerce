@model List<PSI_Ecommerce.Models.Anuncio>

@{
    ViewBag.Title = "Anuncios";
}

<div class="w3-content" style="max-width:1500px">
    <!-- Header -->
    <div class="w3-opacity">
        <div class="w3-clear"></div>
        <header class="w3-center w3-margin-bottom">
            <h1><b>PUC Semi-novos</b></h1>
            <p><b>Divida sua casa com um estudante, ou venda sua aula particular :).</b></p>
            <p><b><a asp-area="" asp-controller="Login" asp-action="Entrar" class="w3-center">Já tem uma conta? Faça login</a></b></p>
        </header>
    </div>
    <main class="l-main">
        <div class="content-wrapper content-wrapper--with-bg">
            @if (Model.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var anuncio in Model)
                    {
                        <li class="list-group-item container">
                            <a href="@Url.Action("DetalheAnuncio", "Anuncio", anuncio)" @*class="elements"*@>
                                <div class="media col-md-3">
                                    <figure class="pull-left">
                                        <img class="media-object img-rounded img-responsive" src="http://placehold.it/140x100" alt="placehold.it/140x100">
                                    </figure>
                                </div>
                                <div class="col-md-7">
                                    <h4 class="list-group-item-heading pb-3"> @anuncio.TituloAnuncio </h4>
                                    <p class="list-group-item-text"> @anuncio.Descricao </p>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-outline-primary">Abrir</button>
                                </div>
                            </a>
                        </li>
                    }

                </ul>
            }

        </div>
    </main>
</div>
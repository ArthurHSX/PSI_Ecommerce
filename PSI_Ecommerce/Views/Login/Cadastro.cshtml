@model Usuario;

<div style="background-color: #f5f5f5;">
    <div class="container" style="background-color: white;">
        <div class="card-block">
            @* O trecho abaixo está definido para chamar a action CadastraUsuario do Controller login para persistir*@
            <form asp-action="CadastraUsuario" asp-controller="Login" method="post">
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Nome <h11>*</h11></label>
                    <div class="col-md-8">
                        @* asp-for referencia a propriedade da classe Usuario *@
                        <input asp-for="Nome" placeholder="" class="form-control input-md" required="" type="text">
                    </div>

                    <label class="col-md-1 control-label" for="Nome">Nascimento<h11>*</h11></label>
                    <div class="col-md-2">
                        <input id="dtnasc" name="dtnasc" placeholder="DD/MM/AAAA" class="form-control input-md" required=""
                               type="text" maxlength="10">
                    </div>

                    <label class="col-md-1 control-label" for="radios">Sexo <h11>*</h11></label>
                    <div class="col-md-4">
                        <label required="" class="radio-inline" for="radios-0">
                            <input name="sexo" id="sexo" value="feminino" type="radio" required>
                            Feminino
                        </label>
                        <label class="radio-inline" for="radios-1">
                            <input name="sexo" id="sexo" value="masculino" type="radio">
                            Masculino
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" @*asp-for="Email"*@>Email <h11>*</h11></label>
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="email@email.com"
                                   required type="text">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" @*asp-for="Senha"*@>Senha <h11>*</h11></label>
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input asp-for="Senha" class="form-control" placeholder="*******" required type="password">
                        </div>
                    </div>
                </div>
                <!-- #f5f5f5; -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Cadastrar"></label>
                    <div class="col-md-8">
                        <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
                        <button id="Cancelar" name="Cancelar" class="btn btn-danger" type="Reset">Cancelar</button>
                    </div>
                </div>
            </form>        
        </div>
    </div>
</div>